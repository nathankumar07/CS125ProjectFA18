<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UrgentReminder"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/urgent"
        android:layout_marginLeft="305dp"/>

    <LinearLayout
        android:id="@+id/vertLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Urgent Reminder"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Reminder Name here"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Reminder Description here"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Enter date here"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="350dp"></TimePicker>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications for this Reminder"
            android:textSize="24sp"
            android:buttonTint="@color/white"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Submit"
            android:textColor="@color/white"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>